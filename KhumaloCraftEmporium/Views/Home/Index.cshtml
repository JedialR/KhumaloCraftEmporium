@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5">
    <div class="container">
        <h1 class="display-4">Welcome to KhumaloCraft Emporium</h1>
        <p class="lead">Explore unique handcrafted products from artisans around the world.</p>
    </div>
</div>

<!-- Features Section -->
<div class="features-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-gem fa-3x text-primary"></i>
                    </div>
                    <h3 class="h5">Unique Designs</h3>
                    <p>Discover one-of-a-kind handcrafted items.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-leaf fa-3x text-success"></i>
                    </div>
                    <h3 class="h5">Eco-Friendly</h3>
                    <p>Products made with sustainable materials.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-shipping-fast fa-3x text-info"></i>
                    </div>
                    <h3 class="h5">Fast Shipping</h3>
                    <p>Quick and reliable delivery worldwide.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section py-5 text-center">
    <div class="container">
        <h2 class="display-5">Join Our Community</h2>
        <p class="lead">Sign up for our newsletter to stay updated on new arrivals and exclusive offers.</p>
        <a href="#" class="btn btn-primary btn-lg">Sign Up Now</a>
    </div>
</div>

<style>
    .hero-section {
        background: url('/images/hero-background.jpg') no-repeat center center;
        background-size: cover;
        color: white;
    }

    .features-section {
        margin-top: 50px;
    }

    .feature-box {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background: white;
    }

    .cta-section {
        background: #007bff;
        color: white;
    }

        .cta-section .btn {
            background: white;
            color: #007bff;
            border: 2px solid white;
        }
</style>
